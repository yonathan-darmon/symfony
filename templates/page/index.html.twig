{% extends 'base.html.twig' %}

{% block title %}article
{% endblock %}

{% block body %}


	<div>
		<h1>{{article.titre}}</h1>
		<p>
			<strong>{{article.user.login}}</strong>
		</p>
		<p>
			<strong>{{article.createdat|date('d-m-Y')}}</strong>
		</p>
		<p class="card-text">{{article.contenu}}</p>
	</div>
	<br>
	<div>
		<h4>Commentaires</h4>
		{% for com in comment %}

			<p>écrit par: {{com.user.login}}</p>
			<p>écrit le: {{com.createdat|date('d-m-Y')}}</p>
			<p>{{com.content}}</p>
            <hr>
		{% endfor %}
        {{form_start(form)}}
        {{form_end(form)}}
	</div>
{% endblock %}
